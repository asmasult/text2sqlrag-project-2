# OpenAI Configuration
# Replace with your OpenAI API key in local .env (do NOT commit secrets)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Pinecone Configuration
# Replace with your Pinecone credentials in local .env
PINECONE_API_KEY=YOUR_PINECONE_API_KEY_HERE
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=rag-documents

# Supabase/PostgreSQL Configuration
# Use a local .env to set DATABASE_URL. Example placeholder below.
DATABASE_URL=postgresql://user:password@host:port/dbname

# OPIK Monitoring Configuration
OPIK_API_KEY=YOUR_OPIK_API_KEY_HERE
OPIK_PROJECT_NAME=Multi-Source RAG

# Vanna 2.0 Configuration (Text-to-SQL)
VANNA_MODEL=gpt-4o
VANNA_PINECONE_INDEX=vanna-sql-training
VANNA_NAMESPACE=sql-agent

# SQL LLM Configuration (Determinism)
VANNA_TEMPERATURE=0.0  # 0.0 = fully deterministic, 1.0 = creative (range: 0.0-2.0)
VANNA_TOP_P=0.1  # Nucleus sampling threshold (range: 0.0-1.0)
VANNA_SEED=42  # Random seed for reproducibility
VANNA_MAX_TOKENS=1000  # Maximum tokens for SQL generation

# Text Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Storage Backend Configuration
STORAGE_BACKEND=s3 # Options: local, s3

# S3 Configuration (for Lambda deployment)
S3_CACHE_BUCKET=my-rag-cache-bucket
AWS_REGION=us-east-1

# AWS Credentials (optional - use IAM role in Lambda)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Upstash Redis Configuration (Query-level caching)
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_URL="https://your-upstash-url"
UPSTASH_REDIS_TOKEN="YOUR_UPSTASH_REDIS_TOKEN"

# Cache TTL Configuration (in seconds)
CACHE_TTL_EMBEDDINGS=604800   # 7 days - embeddings are static
CACHE_TTL_RAG=3600            # 1 hour - may change with new documents
CACHE_TTL_SQL_GEN=86400       # 24 hours - schema relatively stable
CACHE_TTL_SQL_RESULT=900      # 15 minutes - data changes frequently

# Application Settings
APP_NAME=Multi-Source RAG + Text-to-SQL
APP_VERSION=0.1.0
ENVIRONMENT=development

